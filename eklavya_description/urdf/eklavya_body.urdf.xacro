  <!--Left_Wheel-->
  <link name="left_wheel">
    <pose>0.278 0.275 0.1 1.5707 0 1.5707</pose>
    
    <inertial>
      <mass value="0.0001" />
     
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
              iyy="0.0001" iyz="0.0" 
              izz="0.0001" />
    </inertial>
    <collision name='left_wheel_collision'>
      <geometry>
        <cylinder radius=".1" length="0.06"/>
      </geometry>

      <surface>
        <friction>
          <ode>
            <mu>0</mu>
            <mu2>0</mu2>
            <slip1>1.0</slip1>
            <slip2>1.0</slip2>
          </ode>
        </friction>
      </surface>
    </collision>

    <visual name='left_wheel_visual'>
      <geometry>
        <cylinder radius=".1" length="0.06"/>
      </geometry>
      <material name="red">
        <color rgba=".8 0 0 1"/>
      </material>
    </visual>
  </link>


  <!--Right_Wheel-->
  <link name="right_wheel">
    <pose>-0.278 0.275 0.1 1.5707 0 1.5707</pose>
    
    <inertial>
      <mass value="0.0001" />
      
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
              iyy="0.0001" iyz="0.0" 
              izz="0.0001" />
    </inertial>
    <collision name='right_wheel_collision'>
      <geometry>
        <cylinder radius=".1" length="0.06"/>
      </geometry>

      <surface>
        <friction>
          <ode>
            <mu>0</mu>
            <mu2>0</mu2>
            <slip1>1.0</slip1>
            <slip2>1.0</slip2>
          </ode>
        </friction>
      </surface>
    </collision>

    <visual name='right_wheel_visual'>
      <geometry>
        <cylinder radius=".1" length="0.06"/>
      </geometry>
      <material name="red">
        <color rgba=".8 0 0 1"/>
      </material>
    </visual>
  </link> 


 
  
  <!--Creating hinge joints for the wheels-->
  <joint type="revolute" name="left_wheel_hinge">
    <origin xyz="0 0.275" rpy="0.1 0 0 0"/>
    <child link="left_wheel"/>
    <parent link="base_link"/>
    <axis xyz="0 1 0"/>
    <limit effort="30" velocity="1.0"/> <!--lower="-2.2" upper="0.7"--> 
  </joint>

  <joint type="revolute" name="right_wheel_hinge">
    <origin xyz="0 0.275 0.1" rpy="0 0 0"/>
    <child link="right_wheel"/>
    <parent link="base_link"/>
    <axis xyz="0 1 0"/>
    <limit effort="30" velocity="1.0"/> <!--lower="-2.2" upper="0.7"-->
  </joint>
  
